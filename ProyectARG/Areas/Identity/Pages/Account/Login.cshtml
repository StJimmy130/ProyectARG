@page
@model LoginModel

<link rel="stylesheet" href="~/css/Login.css" asp-append-version="true" />

@{
  ViewData["Title"] = "Log in";
}

<h1>@ViewData["Title"]</h1>


<div class="wrapper">
  <form id="account" method="post">
    <h2>Login</h2>
    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
    <div class="input-field">
      <input type="text" required asp-for="Input.Email" autocomplete="username" aria-required="true">
      <label asp-for="Input.Email">Introduce tu email</label>
      <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <div class="input-field">
      <input asp-for="Input.Password" autocomplete="current-password" aria-required="true" type="password" required>
      <label>Introduce tu contraseña</label>
    </div>
    <div class="forget">
      <a id="forgot-password" asp-page="./ForgotPassword">Olvidaste tu contraseña?</a>
    </div>
    <button type="submit">Log In</button>
    <div class="register">
      <p>Don't have an account? <a href="#">Register</a></p>
    </div>
  </form>
</div>

