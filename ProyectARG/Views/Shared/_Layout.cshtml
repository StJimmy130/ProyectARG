<nav>
      <div class="nav-bar">
        <i class='bx bx-menu sidebarOpen'></i>
        <span class="logo navLogo"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">ProyectARG</a></span>
        <div class="menu">
          <div class="logo-toggle">
            <span class="logo"><a href="#">ProyectARG</a></span>
            <i class='bx bx-x siderbarClose'></i>
          </div>
          <ul class="nav-links">
            <li>
              <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
            </li>
            <li>
              <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Catálogo</a>
            </li>
            <li>
              <a class="nav-link" asp-area="" asp-controller="Localidades" asp-action="Index">Funciones</a>
            </li>
            <li><a class="nav-link">Servicios</a></li>
            <li><a class="nav-link">Contacto</a></li>
          </ul>
        </div>
        <div class="darkLight-searchBox">
          <div class="dark-light">
            <i class='bx bx-moon moon'></i>
            <i class='bx bx-sun sun'></i>
          </div>
          <div class="searchBox">
            <div class="searchToggle">
              <i class='bx bx-x cancel'></i>
              <i class='bx bx-search search'></i>
            </div>
            <div class="search-field">
              <input type="text" placeholder="Search...">
              <i class='bx bx-search'></i>
            </div>
          </div>
        </div>
        <ul>
          <partial name="_LoginPartial" />
        </ul>
      </div>
    </nav>
  </header>



