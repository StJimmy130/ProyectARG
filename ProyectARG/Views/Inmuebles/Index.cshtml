@{
  ViewData["Title"] = "Publicacion";
}
<link rel="stylesheet" href="~/css/inmueble.css">
<script src="~/js/Inmuebles.js"></script>


<form id="form">
  <div class="container">
    <div class="row justify-content-center align-items-center">
      <!-- Step 1 -->
      <div class="col-12 justify-content-center align-items-center contenedor step active">
        <div class="d-flex">
          <div class="container">
            <label for="Titulo">Titulo <p>*</p></label>
            <input type="text" name="Titulo" id="Titulo" class="form-control" required>
          </div>
          <div class="container">
            <label for="Precio">Precio <p>*</p></label>
            <input type="number" class="form-control" id="Precio" name="Precio" required>
          </div>
        </div>
        <div class="d-flex flex-column">
          <div class="d-flex">
            <div class="container">
              <input type="hidden" id="InmuebleID" name="InmuebleID">
              <label for="Operacion">Operación <p>*</p></label>
              <select class="form-control" id="Operacion" name="Operacion">
                @foreach (var item in ViewBag.Operaciones)
                {
                  <option value="@item.Value">@item.Text</option>
                }
              </select>
            </div>
            <div class="container">
              <label for="TipoInmueble">Tipo de Inmueble <p>*</p></label>
              <select class="form-control" id="TipoInmueble" name="TipoInmueble">
                @foreach (var item in ViewBag.TiposInmueble)
                {
                  <option value="@item.Value">@item.Text</option>
                }
              </select>
            </div>
          </div>
        </div>
        <div class="d-flex">
          <div class="container">
            <label for="ProvinciaID" class="form-label">Provincia <p>*</p></label>
            @Html.DropDownList("ProvinciaID", null, htmlAttributes: new
              {
                @class = "form-control",
                @id = "ProvinciaID",
                @onChange = "actualizarLocalidades()",
                
              })
          </div>
          <div class="container">
            <label for="LocalidadID" class="form-label">Localidad <p>*</p></label>
            @Html.DropDownList("LocalidadID", null, htmlAttributes: new
              {
                @class = "form-control",
                @id = "LocalidadID",
              })
          </div>
        </div>

        <div class="row">
          <div class="col-md-6 col-xl-4 col-4 mb-3">
            <div class="container mx-auto">
              <div class="d-flex justify-content-center">
                <label for="Barrio">Barrio:
                  <input type="text" name="Barrio" id="Barrio" class="form-control">
                </label>
              </div>
            </div>
          </div>
          <div class="col-md-6 col-xl-4 mb-3">
            <div class="container mx-auto">
              <div class="d-flex justify-content-center">
                <label for="Direccion">Dirección:
                  <input type="text" name="Direccion" id="Direccion" class="form-control">
                </label>
              </div>
            </div>
          </div>
          <div class="col-md-6 col-xl-4 mb-3">
            <div class="container mx-auto">
              <div class="d-flex justify-content-center">
                <label for="NroDireccion">Número de Dirección:
                  <input type="text" name="NroDireccion" id="NroDireccion" class="form-control">
                </label>
              </div>
            </div>
          </div>
          <div class="col-md-6 col-lg-6 mb-3" id="piso-container">
            <div class="container d-flex justify-content-center">
              <label for="Piso">Piso:
                <input type="text" name="Piso" id="Piso" class="form-control">
              </label>
            </div>
          </div>
          <div class="col-md-6 col-lg-6 mb-3" id="departamento-container">
            <div class="container d-flex justify-content-center">
              <label for="NroDepartamento">Número de Departamento:
                <input type="text" name="NroDepartamento" id="NroDepartamento" class="form-control">
              </label>
            </div>
          </div>
          <div class="botonera">
            <button type="button" class="btn btn-secondary prev-btn"><i class='bx bx-left-arrow-alt'>Anterior</i></button>
            <button type="button" class="btn btn-primary next-btn">Siguiente<i class='bx bx-right-arrow-alt'></i></button>
          </div>
        </div>
      </div>
    </div>

    <!-- Step 2 -->
    <div class="row justify-content-center align-items-center">
      <div class="col-12 justify-content-center align-items-center contenedor step">
        <div class="d-flex flex-column">

          <div class="d-flex">
            <div class="container">
              <label for="Area">Superficie en m²:</label>
              <input type="number" class="form-control" id="Area" name="Area">
            </div>
            <div class="container">
              <label for="AreaCubierta">Superficie cubierta en m²:</label>
              <input type="number" class="form-control" id="AreaCubierta" name="AreaCubierta">
            </div>
          </div>
          <div class="d-flex">
            <div class="container">
              <label for="Habitaciones">Habitaciones:</label>
              <input type="number" class="form-control" id="Habitaciones" name="Habitaciones">
            </div>
            <div class="container">
              <label for="Banios">Baños:</label>
              <input type="number" class="form-control" id="Banios" name="Banios">
            </div>
            <div class="container">
              <label for="Ambientes">Ambientes:</label>
              <input type="number" class="form-control" id="Ambientes" name="Ambientes">
            </div>

          </div>
          <div class="container">
            <div class="row">
              <div class="col-6 checkbox">
                <label for="Estacionamiento">Cochera:</label>
                <input type="checkbox" id="Estacionamiento" name="Estacionamiento" class="ui-checkbox">
              </div>
              <div class="col-6 checkbox">
                <label for="Amoblado">Amoblado:</label>
                <input type="checkbox" id="Amoblado" name="Amoblado" class="ui-checkbox">
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-12 col-lg-12 mb-3 mx-6">

          <label for="Descripcion">Descripción:</label>
          <textarea name="Descripcion" id="Descripcion" class="form-control"></textarea>


        </div>
        <div class="botonera">
          <button type="button" class="btn btn-primary prev-btn"><i class='bx bx-left-arrow-alt'></i> Anterior</button>
          <button type="button" class="btn btn-primary next-btn">Siguiente <i class='bx bx-right-arrow-alt'></i></button>
        </div>
      </div>
    </div>

    <!-- Step 3 -->
    <div class="row justify-content-center align-items-center">
      <div class="col-12 contenedor step">
        <div class="d-flex flex-column">
          <div class="row">
            <div class="d-flex">
              <div class="container">
                <div class="row">
                  <label for="Imagen"><i class='bx bx-photo-album'></i></label>
                  <input type="file" id="Imagen" name="Imagen" required accept="image/*" multiple>
                  <div class="list-container" id="list-container" class="col-2"></div>
                  <div class="col-9 container" id="preview-container">

                  </div>
                </div>
              </div>

            </div>


          </div>
          <div class="container text-center">
            <p>Confirmar detalles y enviar.</p>
          </div>
        </div>
        <div class="botonera">
          <button type="button" class="btn btn-primary prev-btn"><i class='bx bx-left-arrow-alt'></i> Anterior</button>
          <button type="button" class="btn btn-success" onclick="GuardarPublicacion()"><i class='bx bx-plus-circle'></i>  Publicar</button>
        </div>
      </div>
    </div>
  </div>
</form>
