@{
  ViewData["Title"] = "Publicacion";
}
<link rel="stylesheet" href="~/css/inmueble.css">
<script src="~/js/Inmuebles.js"></script>


<form>
  <div class="container">
    <div class="row justify-content-center align-items-center">
      <!-- Step 1 -->
      <div class="col-12 justify-content-center align-items-center contenedor step active">
        <div class="d-flex flex-column">
          <div class="d-flex">
            <div class="container">
              <input type="hidden" id="InmuebleID" name="InmuebleID">
              <label for="Operacion">Operación:</label>
              <select class="form-control" id="Operacion" name="Operacion">
                @foreach (var item in ViewBag.Operaciones)
                {
                  <option value="@item.Value">@item.Text</option>
                }
              </select>
            </div>
            <div class="container">
              <label for="TipoInmueble">Tipo de Inmueble:</label>
              <select class="form-control" id="TipoInmueble" name="TipoInmueble">
                @foreach (var item in ViewBag.TiposInmueble)
                {
                  <option value="@item.Value">@item.Text</option>
                }
              </select>
            </div>
          </div>
        </div>
        <div class="d-flex">
          <div class="container">
            <label for="ProvinciaID" class="form-label">Provincia:</label>
            @Html.DropDownList("ProvinciaID", null, htmlAttributes: new { @class = "form-control", @id = "ProvinciaID" })
          </div>
          <div class="container">
            <label for="LocalidadID" class="form-label">Localidad:</label>
            @Html.DropDownList("LocalidadID", null, htmlAttributes: new { @class = "form-control", @id = "LocalidadID" })
          </div>
        </div>
        <div class="botonera">
          <button type="button" class="btn btn-secondary prev-btn"><i class='bx bx-left-arrow-alt'></i></button>
          <button type="button" class="btn btn-primary next-btn"><i class='bx bx-right-arrow-alt'></i></button>
        </div>
      </div>
    </div>

    <!-- Step 2 -->
    <div class="row justify-content-center align-items-center">
      <div class="col-12 justify-content-center align-items-center contenedor step">
        <div class="d-flex flex-column">
          <div class="d-flex">
            <div class="container">
              <div class="row">
                <label for="Imagen"><i class='bx bx-photo-album'></i></label>
                <input type="file" id="Imagen" name="Imagen" multiple>
                <div id="preview-container"></div>
              </div>
            </div>
            <div class="container">
              <label for="Precio">Precio:</label>
              <input type="number" class="form-control" id="Precio" name="Precio">
            </div>
          </div>
          <div class="d-flex">
            <div class="container">
              <label for="Area">Área en m²:</label>
              <input type="number" class="form-control" id="Area" name="Area">
            </div>
            <div class="container">
              <label for="AreaCubierta">Área cubierta en m²:</label>
              <input type="number" class="form-control" id="AreaCubierta" name="AreaCubierta">
            </div>
          </div>
          <div class="d-flex">
            <div class="container">
              <label for="Habitaciones">Habitaciones:</label>
              <input type="number" class="form-control" id="Habitaciones" name="Habitaciones">
            </div>
            <div class="container">
              <label for="Banios">Baños:</label>
              <input type="number" class="form-control" id="Banios" name="Banios">
            </div>
            <div class="container">
              <label for="Ambientes">Ambientes:</label>
              <input type="number" class="form-control" id="Ambientes" name="Ambientes">
            </div>

          </div>
          <div class="container">
            <div class="row">
              <div class="col-6 flex justify-content-center">
                <label for="Estacionamiento">Estacionamiento:</label>
                <input type="checkbox" id="Estacionamiento" name="Estacionamiento">
              </div>
              <div class="col-6 flex justify-content-center">
                <label for="Amoblado">Amoblado:</label>
                <input type="checkbox" id="Amoblado" name="Amoblado">
              </div>
            </div>
          </div>
        </div>
        <div class="botonera">
          <button type="button" class="btn btn-primary prev-btn"><i class='bx bx-left-arrow-alt'></i></button>
          <button type="button" class="btn btn-primary next-btn"><i class='bx bx-right-arrow-alt'></i></button>
        </div>
      </div>
    </div>

    <!-- Step 3 -->
    <div class="row justify-content-center align-items-center">
      <div class="col-12 justify-content-center align-items-center contenedor step">
        <div class="d-flex flex-column">
          <div class="d-flex">
            <div class="container">
              <label for="Direccion">Dirección:
                <input type="text" name="Direccion" id="Direccion" class="form-control">
              </label>
            </div>
            <div class="container">
              <label for="NroDireccion">Número de Dirección:
                <input type="text" name="NroDireccion" id="NroDireccion" class="form-control">
              </label>
            </div>
            <div class="container">
              <label for="Descripcion">
                Descripción:
                <textarea name="Descripcion" id="Descripcion" class="form-control"></textarea>
              </label>
            </div>
          </div>
          <div class="container">
            <p>Confirmar detalles y enviar.</p>
          </div>
        </div>
        <div class="botonera">
          <button type="button" class="btn btn-primary prev-btn"><i class='bx bx-left-arrow-alt'></i></button>
          <button class="btn btn-success" onclick="GuardarPublicacion()"><i class='bx bx-plus-circle'></i></button>
        </div>
      </div>
    </div>
</form>
