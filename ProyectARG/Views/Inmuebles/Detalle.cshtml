<link rel="stylesheet" href="~/css/inmuebleDetalle.css">



<body>
  <input type="hidden" id="UsuarioID" value="@ViewBag.UsuarioID">
  <div class="load-screen" id="loading-screen">
    <div class="loader"></div>
  </div>
  <section class="vistaDetalle">
    <div class="container">
      <div class="row">
        <!-- Columna principal de las imágenes y descripción -->
        <div class="col-md-8 col-sm-12 col-sm-12">
          <div class="container-fluid contenedor-imagenes">
            <div class="image-container">
              <div class="image-control">
                <button><i class='bx bx-chevron-left'></i></button>
                <button><i class='bx bx-chevron-right'></i></button>
              </div>
              <img id="MainImage" src="~/img/LogoConFondo.png">
            </div>
            <div class="miniaturas" id="Miniaturas-container">

            </div>
          </div>
          <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 ">
              <div class="property-details">
                <h4>Descripción:</h4>
                <p id="Descripcion"></p>
              </div>
            </div>

            <div class="col-lg-12 col-md-12 col-sm-12 ">
              <div class="property-details container-comments">
                <h4>Comentarios:</h4>
                <button onclick="modalComentarios()">+</button>
                <div id="Comentarios">
                </div>
              </div>
            </div>

          </div>
        </div>
        <!-- Columna secundaria con la información del vendedor -->
        <div class="col-md-4 col-sm-12">
          <div class="info-container">
            <div class="property-info" id="DatosPrincipales">
              <!-- Los datos principales se generarán dinámicamente -->
            </div>
            <div class="info-vendedor" id="DatosVendedor">

            </div>
          </div>
          <div class="row">
            <div class="col-12">
              <div class="property-details" id="DetallesPublicaciones">
                <!-- Detalles adicionales de la publicación -->
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <div class="modal" tabindex="-1" id="ModalComentarios">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Que le parecio el inmueble?</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>

        <div class="modal-body row">
          <label for="rating">Calificación:</label>
          <div class="rating col-4" id="Valoracion">
            <input value="5" name="rating" id="star5" type="radio">
            <label for="star5"></label>
            <input value="4" name="rating" id="star4" type="radio">
            <label for="star4"></label>
            <input value="3" name="rating" id="star3" type="radio">
            <label for="star3"></label>
            <input value="2" name="rating" id="star2" type="radio">
            <label for="star2"></label>
            <input value="1" name="rating" id="star1" type="radio">
            <label for="star1"></label>
          </div>
          <label for="Comentario">Comentario:</label>
          <textarea name="Comentario" id="Comentario" class="form-control"></textarea>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
          <button type="button" class="btn btn-primary" onclick="guardarComentario()">Enviar</button>
        </div>
      </div>
    </div>
  </div>
</body>



@section Scripts {
  <script src="~/js/InmuebleDetalle.js"></script>
}