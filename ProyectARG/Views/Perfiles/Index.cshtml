<link rel="stylesheet" href="~/css/perfil.css">

<input type="hidden" id="UsuarioID" value="@ViewBag.UsuarioID">

<div class="row container-xl conteiner-funciones">
  <div class="col-12">
    <div class="tituloContenedor">
      <h1 class="titulo"><i class="fa-regular fa-address-card"></i> Administración del Perfil</h1>
      <hr class="tituloHr">
    </div>
  </div>
</div>
<div class="container py-4 contenedor">
  <form class=" p-4  shadow-lg  formulario">
    <div class="row">
      <div class="form-group col-md-6 mb-4">
        <label for="nombre">Nombre Completo</label>
        <input
          type="text"
          id="nombre"
          name="nombre"
          class="form-control"
          placeholder="Tu nombre completo"
        />
        <span id="span-nombre"></span>
      </div>
      <div class="form-group col-md-6 mb-4">
        <label for="phone">Número de teléfono</label>
        <input class="form-control" type="text" id="phone" maxlength="14" oninput="formatearTelefono(this)" placeholder="(1234) 56-7890">

      </div>
      <div class="form-group col-md-4 mb-4">
        <label for="instagram" >Instagram</label>
        <input
          type="text"
          id="instagram"
          name="instagram"
          class="form-control"
          placeholder="Usuario de Instagram"
        />
      </div>
      <div class="form-group col-md-4 mb-4">
        <label for="facebook" >Facebook</label>
        <input
          type="text"
          id="facebook"
          name="facebook"
          class="form-control"
          placeholder="Tu link de Facebook"
        />
      </div>
      <div class="form-group col-md-4 mb-4">
        <label for="whatsapp">WhatsApp</label>
        <input
          type="text"
          id="whatsapp"
          name="whatsapp"
          class="form-control"
          maxlength="14" oninput="formatearTelefono(this)" placeholder="(1234) 56-7890"
        />
      </div>
      
    </div>
    <button type="submit" class="btn btn-primary  btn-lg mt-3 btn-safe" onclick="ActualizarInformacion()">Guardar cambios</button>
  </form>
</div>

<script src="https://code.jquery.com/jquery-3.6.1.js" integrity="sha256-3zlB5s2uwoUzrXK3BT7AX3FyvojsraNFxCc2vC/7pNI="
  crossorigin="anonymous"></script>
<script src="~/js/Perfil.js"></script>