@{
  ViewData["Title"] = "Provincias";
}
<link rel="stylesheet" href="~/css/Funciones.css">
@section Scripts {
  <script src="~/js/Provincias.js"></script>
  <script src="~/js/Localidades.js"></script>

}


<div class="container mt-5">
  <div class="row">
    <!-- Sección de Provincias -->
    <div class="col-lg-4 col-md-4 col-sm-12 mb-4">
      <div class="contenedor">
      <div class="mb-3">
        
        <input type="hidden" value="0" id="ProvinciaIDAdd">
      </div>
      <div class="mb-3">
        <label for="ProvinciaNombre">Nombre</label>
        <input type="text" id="ProvinciaNombre" class="form-control">
      </div>
      <div class="mb-3">
        <button type="button" class="btn btn-success" onclick="GuardarProvincia()">Guardar Provincia</button>
        <button class="btn btn-secondary" onclick="ListadoDeProvincias()">Recargar</button>
      </div>
      <div class="Tbody-class">
        <table class="table" id="table1">
          <thead>
            <tr>
              <th scope="col">Nombre</th>
              <th scope="col">Editar</th>
              <th scope="col">Eliminar</th>
            </tr>
          </thead>
          <div class="Tbody-class">
          <tbody class="tabla" id="tbodyProvincias">
          </tbody>
          </div>
        </table>
      </div>
      </div>
    </div>

    <!-- Sección de Localidades -->
    <div class="col-lg-8 col-md-8 col-sm-12 mb-4">
      <div class="contenedor">
      <div class="row mb-3">
        <div class="col-12">
          
        </div>
      </div>
      <div class="row mb-3">
        <div class="col-6">
          <input type="hidden" value="0" id="LocalidadID">
          <label for="ProvinciaID">Seleccione la Provincia:</label>
          @Html.DropDownList("ProvinciaID", null, htmlAttributes: new { @class = "form-control" })
        </div>
        <div class="col-6">
          <label for="LocalidadNombre">Nombre</label>
          <input type="text" id="LocalidadNombre" class="form-control">
        </div>
      </div>
      <div class="mb-3">
        <button type="button" class="btn btn-success" onclick="GuardarLocalidad()">Guardar Localidad</button>
        <button class="btn btn-secondary" onclick="ListadoDeLocalidades()">Recargar</button>
      </div>
      <div class="Tbody-class">
        <table class="table" id="table2">
          <thead>
            <tr>
              <th scope="col">Nombre</th>
              <th scope="col">Provincia</th>
              <th scope="col">Editar</th>
              <th scope="col">Eliminar</th>
            </tr>
          </thead>
            <tbody id="tbodyLocalidades" class="tabla">
            </tbody>
        </table>
      </div>
      </div>
    </div>
  </div>
</div>





<div class="modal" tabindex="-1" id="ProvinciaModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 id="TituloModalProvincia"></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <input type="hidden" value="0" id="ProvinciaIDedit">
        <label for="Nombre">Nombre</label>
        <input type="text" id="ProvinciaNombreEdit" class="form-control">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"
          onclick="LimpiarModals()">Cancelar</button>
        <button type="button" class="btn btn-primary" onclick="GuardarProvincia()">Guardar Provincia</button>
      </div>
    </div>
  </div>
</div>

<div class="modal" tabindex="-1" id="LocalidadModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 id="TituloModalLocalidad"></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <input type="hidden" value="0" id="LocalidadIDEdit">

        <div class="dropdown">
          <label for="ProvinciaID">SELECCIONE LA PROVINCIA:</label>
          @Html.DropDownList("ProvinciaIDEdit", null, htmlAttributes: new { @class = "form-control" })
        </div>

        <label for="LocalidadNombre">Nombre</label>
        <input type="text" id="LocalidadNombreEdit" class="form-control">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"
          onclick="LimpiarModals()">Cancelar</button>
        <button type="button" class="btn btn-primary" onclick="GuardarLocalidad()">Guardar localidad</button>
      </div>
    </div>
  </div>
</div>